<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cmpt276.indigo.carbontracker.UtilityResultActivity"
    android:background="@drawable/background_image">


    <TableLayout
        android:id="@+id/utility_result_bill_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/bill_information"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Title" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bill_name" />

            <TextView
                android:id="@+id/utility_result_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/company_" />

            <TextView
                android:id="@+id/utility_result_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/billing_days" />

            <TextView
                android:id="@+id/utility_result_billing_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_energy_consumption" />

            <TextView
                android:id="@+id/utility_result__total_energy_consumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_carbon_emissions" />

            <TextView
                android:id="@+id/utility_result_total_emission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_of_occupants" />

            <TextView
                android:id="@+id/utility_result_occupants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/utility_result_per_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/utility_result_bill_information"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/per_day_usage"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Title" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/energy_consumption" />

            <TextView
                android:id="@+id/utility_result_per_day_energy_consumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carbon_emissions" />

            <TextView
                android:id="@+id/utility_result_per_day_emissions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/utility_result_per_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/utility_result_per_day"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/per_person_usage"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Title" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/energy_consumption_" />

            <TextView
                android:id="@+id/utility_result_per_person_energy_consumption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carbon_emissions_" />

            <TextView
                android:id="@+id/utility_result_per_person_emissions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
