<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_carbon_footprint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cmpt276.indigo.carbontracker.CarbonFootprintMainMenu"
    tools:showIn="@layout/carbon_footprint_main_menu_app_bar">

        <Button
            android:id="@+id/carbon_footprint_main_menu_journey_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/carbon_footprint_main_menu_periodic_data_btn"
            android:layout_alignStart="@+id/carbon_footprint_main_menu_periodic_data_btn"
            android:layout_marginBottom="62dp"
            android:text="@string/journey_footprint"
            android:theme="@style/GreenButton" />

        <Button
            android:id="@+id/carbon_footprint_main_menu_periodic_data_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/periodic_emissions"
            android:layout_marginBottom="210dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:theme="@style/GreenButton"/>

        <Button
            android:id="@+id/carbon_footprint_main_menu_periodic_pie_graph_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="91dp"
            android:text="Periodic Pie Graphs"
            android:theme="@style/GreenButton"/>

</RelativeLayout>
