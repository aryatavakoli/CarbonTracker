<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cmpt276.indigo.carbontracker.CarbonFootprintMainMenu">


    <Button
        android:id="@+id/carbon_footprint_main_menu_journey_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/carbon_footprint_main_menu_periodic_data_btn"
        android:layout_alignStart="@+id/carbon_footprint_main_menu_periodic_data_btn"
        android:layout_marginBottom="62dp"
        android:text="@string/journey_footprint"
        android:theme="@style/GreenButton" />

    <Button
        android:id="@+id/carbon_footprint_main_menu_periodic_data_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/periodic_emissions"
        android:layout_marginBottom="210dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:theme="@style/GreenButton"/>
</RelativeLayout>
